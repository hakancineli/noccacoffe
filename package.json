{
  "name": "starbucks-turkey-clone",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npx prisma generate --schema=prisma/schema.prisma && npx prisma generate --schema=market-master/prisma/schema.prisma && next build",
    "start": "next start",
    "lint": "next lint",
    "db:seed": "tsx prisma/seed.ts",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "electron-builder build --dir",
    "electron-dist-win": "electron-builder build --win --x64",
    "electron-dist-mac": "electron-builder build --mac --universal"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@heroicons/react": "^2.1.1",
    "@prisma/client": "^6.18.0",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.23.26",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.562.0",
    "next": "14.0.3",
    "next-auth": "^4.24.13",
    "openai": "^6.15.0",
    "prisma": "^6.18.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "react-icons": "^4.11.0",
    "recharts": "^3.5.1",
    "swiper": "^12.0.3",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^8.53.0",
    "eslint-config-next": "14.0.3",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "tsx": "^4.20.6",
    "typescript": "^5.2.2",
    "wait-on": "^9.0.3"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.noccacoffee.pos",
    "productName": "NOCCA Coffee POS",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "public/images/logo/noccacoffee.jpeg"
    },
    "mac": {
      "category": "public.app-category.lifestyle",
      "icon": "public/images/logo/noccacoffee.jpeg",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "NOCCA Coffee POS"
    }
  }
}